{
	"compilerOptions": {
		"outDir": ".",
		"target": "ESNext",
		"module": "CommonJS",
		"strict": true,
		"baseUrl": "src",
		"rootDir": "src",
		"declaration": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"noUnusedParameters": true,
		"allowUnusedLabels": false,
		"inlineSources": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"importsNotUsedAsValues": "error",
		"lib": [
			"ES2015"
		],
	},
	"exclude": [],
	"include": [
		"src/**/*.ts"
	]
}